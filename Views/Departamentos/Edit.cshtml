@model AssetGuard_Project.Models.Departamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDepartamento" />
            <div class="form-group">
                <label asp-for="DescripcionDepartamento" class="control-label"></label>
                <input asp-for="DescripcionDepartamento" class="form-control" />
                <span asp-validation-for="DescripcionDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoDepartamento" class="control-label"></label>
                @Html.DropDownListFor(model => model.EstadoDepartamento, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Activo", Value = "Activo", Selected = true },
                    new SelectListItem { Text = "Inactivo", Value = "Inactivo" }
                }, new { @class = "form-control" })
                <span asp-validation-for="EstadoDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
