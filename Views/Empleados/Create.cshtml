@model AssetGuard_Project.Models.Empleado

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEmpleado" class="control-label"></label>
                <input asp-for="NombreEmpleado" class="form-control" />
                <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
                 
            </div>
            <div class="form-group">
                <label asp-for="CedulaEmpleado" class="control-label"></label>
                <input asp-for="CedulaEmpleado" class="form-control" />
                @if (ViewData["CedulaError"] != null)
                    {
                        <span class="text-danger">@ViewData["CedulaError"]</span>
                    }
                
            </div>
            <div class="form-group">
                <label asp-for="DepartamentoEmpleado" class="control-label"></label>
                <select asp-for="DepartamentoEmpleado" class ="form-control" asp-items="ViewBag.DepartamentoEmpleado"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoPersonaEmpleado" class="control-label"></label>
                @Html.DropDownListFor(model => model.TipoPersonaEmpleado, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Física", Value = "Física" },
                    new SelectListItem { Text = "Jurídica", Value = "Jurídica" }
                }, new { @class = "form-control" })
                <span asp-validation-for="TipoPersonaEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaIngresoEmpleado" class="control-label"></label>
                <input asp-for="FechaIngresoEmpleado" class="form-control" />
                <span asp-validation-for="FechaIngresoEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoEmpleado" class="control-label"></label>
                @Html.DropDownListFor(model => model.EstadoEmpleado, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Activo", Value = "Activo", Selected = true },
                    new SelectListItem { Text = "Inactivo", Value = "Inactivo" }
                }, new { @class = "form-control" })
                <span asp-validation-for="EstadoEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
